{
  "name": "backoffice-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "root": "apps/backoffice-client",
  "sourceRoot": "apps/backoffice-client/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/backoffice-client",
        "browser": "apps/backoffice-client/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/backoffice-client/tsconfig.app.json",
        "inlineStyleLanguage": "css",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/backoffice-client/public"
          },
          {
            "glob": "**/*",
            "input": "apps/backoffice-client/src/assets",
            "output": "assets"
          }
        ],
        "styles": ["apps/backoffice-client/src/styles.css"]
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/backoffice-client/src/environments/environment.ts",
              "with": "apps/backoffice-client/src/environments/environment.prod.ts"
            }
          ],
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "1.8mb",
              "maximumError": "2.2mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "20kb",
              "maximumError": "25kb"
            },
            {
              "type": "anyScript",
              "maximumWarning": "1mb",
              "maximumError": "2mb"
            }
          ],
          "outputHashing": "all",
          "optimization": {
            "scripts": true,
            "styles": true,
            "fonts": true
          },
          "namedChunks": false,
          "extractLicenses": true
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "options": {
        "port": 4200
      },
      "configurations": {
        "production": {
          "buildTarget": "backoffice-client:build:production"
        },
        "development": {
          "buildTarget": "backoffice-client:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "backoffice-client:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/backoffice-client/jest.config.ts"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "backoffice-client:build",
        "port": 4200,
        "staticFilePath": "dist/backoffice-client/browser",
        "spa": true
      }
    }
  }
}
